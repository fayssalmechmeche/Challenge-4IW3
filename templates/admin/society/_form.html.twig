{{ form_start(form, {'action': path(action, {"id": actionId}), 'attr': {'id': id, 'class': 'w-full'}}) }}

<div class="flex flex-wrap gap-y-5 gap-x-10">
	{{ form_row(form.name) }}
	{{ form_row(form.address) }}
	{{ form_row(form.phone) }}
	{{ form_row(form.email) }}
	{{ form_row(form.siret) }}
	{{ form_widget(form.logo,{'attr' : {'class':'hidden'}}) }}


</div>


<button type="button" class="text-white  font-medium bg-nav-btn hover:bg-blue-800 transition-all duration-300 ease-out rounded-lg mt-7 mb-3 px-3 py-2" onclick="{{ actionId ? 'editSociety(' ~ society.id ~ ')' : 'addNewSociety()' }}">
	{% if actionId is not null %}
		Éditer
	{% else %}
		Créer
	{% endif %}
</button>
{{ form_end(form) }}
