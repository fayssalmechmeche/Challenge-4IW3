<article class="flex h-full min-w-fit justify-around rounded-lg bg-white p-3 shadow-lg max-sm:flex-col max-sm:justify-center max-sm:rounded-md max-sm:p-1 max-sm:w-[190px] max-lg:w-96 max-lg:mb-4">
    <div class="flex flex-col justify-center px-4 py-1 max-sm:px-2">
        <h4 class="text-center">{{title}}</h4>
        <p class="text-center text-2xl font-semibold">{{data}}</p>
    </div>
    {% if add %}
        <div class="flex items-center justify-center px-4 py-1 max-sm:px-2">
            <button class="h-fit w-fit rounded-lg bg-blue-700 px-4 py-3 text-white transition-all max-sm:rounded-lg max-sm:px-3 max-sm:py-2 hover:bg-blue-600" onclick="openSocietyCreateModal()">
                Ajouter
            </button>
        </div>
    {% endif %}
</article>