{# {% block title %}Création d'une Société{% endblock %} #}

	{% block body %}
		<h1 class="mb-4 text-center text-3xl font-bold max-sm:text-xl max-sm:font-semibold"> Visualisation d'une Société
	</h1>

	<div
		class='flex-col items-start w-full'>
		{# <div class="w-48% max-md:w-full"> #}
		<label class="mb-1 block">Prénom</label>
		<p class="mb-3 bg-white w-full rounded-sm p-2">
			{{user.name}}
		</p>
		<label class="mb-1 block">Nom</label>
		<p class="mb-3 bg-white w-full rounded-sm p-2">
			{{user.lastName}}
		</p>
		<label class="mb-1 block">Email</label>
		<p class="mb-3 bg-white w-full rounded-sm p-2">
			{{user.email}}
		</p>
		<label class="mb-1 block">Roles</label>
		<p class="mb-3 bg-white w-full rounded-sm p-2">
			{% for role in user.roles %}
				{{role == "ROLE_ACCOUNTANT" ? "Comptable,": "Utilisateur,"}}
				{% if loop.last %}
					{{role == "ROLE_ACCOUNTANT" ? "Comptable": "Utilisateur"}}
				{% endif %}
			{% endfor %}
		</p>
		{# </div> #}
	</div>
{% endblock %}
