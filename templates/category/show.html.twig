{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    {% set modal_id = 'categorieDetailsModal' %}
  {% set modal_content_id = 'categorieDetailsModalContentId' %}

  <button class="absolute top-3 right-3 text-white font-medium bg-red-500 hover:bg-red-700 transition-all duration-300 ease-out rounded-lg px-2 py-1" onclick="toggleModal('categorieDetailsModal', 'categorieDetailsModalContentId')">Fermer</button>

  <!-- Contenu de notre modal ici -->
  <h2 class="text-3xl mb-5 dark:text-white">Détails de la catégorie</h2>

    <div class="flex flex-col px-1 my-1">
      <p class="font-medium dark:text-white">Nom de la catégorie</p>
      <p id="formulaName" class="rounded-xl dark:bg-dark-card dark:text-white w-96 h-10 mt-1 px-2 border border-solid border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-300 focus:border-transparent shadow-form
	  flex justify-start items-center">{{ category.name }}</p>
    </div>

  <div class="flex mt-7 justify-start items-center">
    <button onclick="editFromShow({{ category.id }})" class="text-white font-medium bg-orange-400 hover:bg-orange-600 transition-all duration-300 ease-out rounded-lg px-3 py-2 mr-3">Modifier</button>
    {{ include('category/_delete_form.html.twig') }}
  </div>
{% endblock %}
