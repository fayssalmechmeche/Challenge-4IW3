<form class="flex justify-start" method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm(' Etes vous sur de vouloir supprimer cette catégorie ?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
	<button class="text-white font-medium  bg-red-500 hover:bg-red-700 transition-all duration-300 ease-out rounded-lg px-3 py-2">Supprimer cette catégorie</button>
</form>
