<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{% block title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {# <link
      rel="stylesheet"
      type="text/css"
      media="screen"
      href="dist/css/pageAdmin.css"
    /> #}
    <link rel="stylesheet" href="{{ asset('css/mermaid.css') }}" />
    {# // <script src="dist/js/main.js"></script> #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </head>
  <body class="flex h-screen bg-slate-300 px-12 py-8 max-sm:px-5 max-sm:py-4">
    <menu class="mr-8 w-3/12 rounded-lg bg-white max-md:hidden">
      Mon menu
    </menu>
    <main class="flex h-full w-9/12 flex-col max-md:w-full">
      {% block body %}{% endblock %}
    </main>
    <script src="https://cdn.jsdelivr.net/npm/gridjs/dist/gridjs.umd.js"></script>
    {% block script_js %}{% endblock %}
  </body>
</html>
