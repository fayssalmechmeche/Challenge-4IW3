<form class="flex justify-center mt-3" method="post" action="{{ path('app_customer_delete', {'id': customer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
    <button class="text-white font-medium  bg-red-500 hover:bg-red-700 transition-all duration-300 ease-out rounded-lg px-3 py-2">Supprimer le Client</button>
</form>
