{% extends 'base.html.twig' %}

{% block title %}Réinitialiser Mot de passe{% endblock %}

{% block body %}

    <div class="flex h-screen w-screen flex-col">
        <header class="flex h-10 w-full items-center bg-gradient-to-b from-slate-400 max-sm:h-auto max-sm:justify-center">
            <a href="{{ path('default_index') }}">
                <img src="{{ asset('images/navbar/Main Logo.svg') }}" alt="LogoAstroShe	">
            </a>
        </header>

        <main class="flex flex-1 items-center justify-center px-4">
            <div class="absolute left-0 top-1/3 -z-10">
                <div
                class="absolute left-0 top-1/2 h-48 w-screen -skew-y-[15deg] transform bg-slate-900"
                ></div>
                <div
                class="absolute left-0 top-1/2 h-32 w-screen -skew-y-[15deg] transform bg-blue-600"
                ></div>
                <div
                class="absolute left-0 top-1/2 h-16 w-screen -skew-y-[15deg] transform bg-blue-100"
                ></div>
            </div>
            <section
                class="flex h-5/6 w-5/12 flex-col items-center justify-center rounded-lg bg-slate-50 p-16 max-lg:w-8/12 max-md:w-full max-sm:h-full max-sm:p-8"
            >
                <h2 class='mb-8 text-center text-4xl text-slate-800'>Réinitialiser votre mot de passe</h2>

                {{ form_start(resetForm,{'attr':{'class':'flex w-full flex-col items-center justify-center'}}) }}
                    {# {{ form_row(resetForm.plainPassword) }} #}

                    <div class="w-full mb-4">
                        {{ form_label(resetForm.plainPassword.first,'Mot de passe',{'label_attr':{'class':'mb-2 block text-lg font-medium max-sm:text-xl'}}) }}
                        {{ form_widget(resetForm.plainPassword.first,{'attr':{'class':'h-12 w-full rounded-md border-2 p-2 text-lg drop-shadow-lg focus:border-blue-500 focus:outline-none'}}) }}
                        <div id="userEmail" class="text-red-500">{{ form_errors(resetForm.plainPassword.first,{'attr' :{'id':'','class' :'text-red', 'autofocus':'true'}}) }}</div>
                    </div>
                        {# Mot de passe #}
                    <div class="w-full">
                        {{ form_label(resetForm.plainPassword.second,'Confirmer mot de passe',{'label_attr':{'class':'mb-2 block text-lg font-medium max-sm:text-xl'}}) }}
                        {{ form_widget(resetForm.plainPassword.second,{'attr':{'class':'h-12 w-full rounded-md border-2 p-2 text-lg drop-shadow-lg focus:border-blue-500 focus:outline-none'}}) }}
                        <div id="userEmail" class="text-red-500">{{ form_errors(resetForm.plainPassword.second,{'attr' :{'id':'','class' :'text-red'}}) }}</div>
                        {# Confirmer le mot de passe #}
                    </div>
                    <div class="mt-12 flex w-full flex-col items-center justify-around">
                        <button
                        type="submit"
                        class="focus:shadow-outline h-12 w-full cursor-pointer rounded-md bg-blue-600 px-4 py-2 text-center text-lg font-bold text-white drop-shadow-xl hover:bg-blue-700 focus:outline-none xl:w-4/6"
                        >
                            Réinitialiser
                        </button>
                    </div>
                {{ form_end(resetForm) }}
            </section>
        </main>

        <footer class="h-8 bg-gradient-to-t from-slate-400"></footer>
    </div>

{# cs #}

    
{% endblock %}
