{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="flex h-screen w-screen flex-col">
        <header class="flex h-10 w-full items-center bg-gradient-to-b from-slate-400 max-sm:h-auto max-sm:justify-center">
            <a href="{{ path('default_index') }}">
                <img src="{{ asset('images/navbar/Main Logo.svg') }}" alt="LogoAstroShe	">
            </a>
        </header>

        <main class="flex flex-1 items-center justify-center px-4">
            <div class="absolute left-0 top-1/3 -z-10">
                <div
                class="absolute left-0 top-1/2 h-48 w-screen -skew-y-[15deg] transform bg-slate-900"
                ></div>
                <div
                class="absolute left-0 top-1/2 h-32 w-screen -skew-y-[15deg] transform bg-blue-600"
                ></div>
                <div
                class="absolute left-0 top-1/2 h-16 w-screen -skew-y-[15deg] transform bg-blue-100"
                ></div>
            </div>
            <section
                class="flex h-5/6 w-5/12 flex-col items-center justify-center rounded-lg bg-slate-50 p-16 max-lg:w-8/12 max-md:w-full max-sm:h-full max-sm:p-8"
            >
                <div class="max-sm: mb-6">
                <h2 class="mb-4 text-center text-4xl text-slate-800">
                    Vous avez oublié votre mot de passe ?
                </h2>
                <h3 class="text-center text-xl text-slate-800">
                    Entrez votre adresse mail associé à votre compte afin que nous vous
                    envoyons un lien pour reinitialiser votre mot de passe.
                </h3>
                </div>
                {{ form_start(requestForm,{'attr':{'class':'flex w-full flex-col items-center justify-center'}}) }}
                <div class="w-full">
                    {{ form_label(requestForm.email,'E-mail',{'label_attr':{'class':'mb-2 block text-lg font-medium max-sm:text-xl'}}) }}
                    {{ form_widget(requestForm.email,{'attr':{'class':'h-12 w-full rounded-md border-2 p-2 text-lg drop-shadow-lg focus:border-blue-500 focus:outline-none'}}) }}
                    <div id="userEmail" class="text-red-500">{{ form_errors(requestForm.email,{'attr' :{'id':'','class' :'text-red'}}) }}</div>
                </div>
                <div class="mt-12 flex w-full flex-col items-center justify-around">
                    <button
                    type="submit"
                    class="focus:shadow-outline h-12 w-full cursor-pointer rounded-md bg-blue-600 px-4 py-2 text-center text-lg font-bold text-white drop-shadow-xl hover:bg-blue-700 focus:outline-none xl:w-4/6"
                    >
                    Valider
                    </button>
                    <a
                    class="mt-3 inline-block align-baseline font-bold text-blue-600 hover:text-blue-800"
                    href="{{ path('app_register') }}"
                    >
                    Vous n'avez pas de compte ?
                    </a>
                </div>
                {{ form_end(requestForm) }}
            </section>
        </main>

        <footer class="h-8 bg-gradient-to-t from-slate-400"></footer>
    </div>
{% endblock %}
