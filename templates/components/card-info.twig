<div class="px-7 py-3 bg-white dark:bg-dark-card w-60 rounded-xl shadow-xl flex flex-col justify-start items-start gap-2 border-t dark:border-none">
	<p class="text-grey-p text-base dark:text-white">{{ description }}</p>
	<h2 class="text-3xl font-bold dark:text-white">{{ amount }}</h2>
	{% if percentage is defined and percentage >= 0 %}
		<div class="flex justify-center items-center bg-bg-light-green w-24 h-10 rounded-3xl px-5 py-2">
			<span class="material-symbols-outlined text-light-green">
				trending_up
			</span>
			<p class="font-bold text-light-green">+{{ percentage }}%</p>
		</div>
	{% endif %}
	{% if percentage is defined and percentage < 0 %}
		<div class="flex justify-center items-center bg-bg-light-red w-24 h-10 rounded-3xl px-5 py-2">
			<span class="material-symbols-outlined text-light-red">
				trending_down
			</span>
			<p class="font-bold text-light-red">{{ percentage }}%</p>
		</div>
	{% endif %}
	{% if redirectUrl is defined %}
		<a href="{{ path(redirectUrl) }}" type="button" class="flex justify-center items-center w-24 h-10 rounded-3xl px-5 py-2 bg-progress-bar-1 text-white text-sm font-bold tracking-wider uppercase hover:bg-white hover:text-progress-bar-1 hover:border-progress-bar-1 border border-solid border-progress-bar-1 transition-all duration-300 ease-in-out">
			Voir
		</a>
	{% endif %}
</div>
